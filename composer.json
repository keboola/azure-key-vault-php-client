{
    "name": "keboola/azure-key-vault-client",
    "license": "MIT",
    "type": "library",
    "description": "Client for Azure Key Vault",
    "keywords": [
        "keboola",
        "azure",
        "key vault",
        "client"
    ],
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Keboola\\AzureKeyVaultClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\AzureKeyVaultClient\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=5.6",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.3",
        "psr/log": "^1.1",
        "symfony/config": "^3.4|^4.2|^5.0",
        "symfony/validator": "^3.4|^4.2|^5.0"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phpunit/phpunit": "^5.6"
    },
    "scripts": {
        "tests": "phpunit --coverage-clover build/logs/clover.xml --coverage-xml=build/logs/coverage-xml --log-junit=build/logs/phpunit.junit.xml",         
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "process-timeout": 3600
    }
}
